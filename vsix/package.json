{
  "name": "docgraph",
  "displayName": "Docgraph",
  "description": "LSP client for docgraph documentation modeling tool",
  "version": "0.4.0",
  "publisher": "sonesuke",
  "repository": {
    "type": "git",
    "url": "https://github.com/sonesuke/docgraph"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Docgraph",
      "properties": {
        "docgraph.binaryPath": {
          "type": "string",
          "default": "docgraph",
          "description": "Path to the docgraph binary."
        }
      }
    },
    "commands": [
      {
        "command": "docgraph.restartServer",
        "title": "Docgraph: Restart Language Server"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "package": "vsce package"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@types/node": "25.x",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "prettier-plugin-toml": "^2.0.6",
    "vscode-languageclient": "^9.0.1"
  }
}
